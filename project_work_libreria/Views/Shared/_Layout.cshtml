<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - project_work_libreria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/project_work_libreria.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleDettagli.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheet.scss" asp-append-version="true" />
</head>
<body class="bg-main ">
    <header>

        <nav class="navbar navbar-expand-lg" style="background-color:rgb(143, 107, 82);">
            <div class="container-fluid ">
                <a class="navbar-brand text-white" href="#"><img src="https://i.pinimg.com/originals/7d/e1/52/7de1524dc6e04749931920474056b7c0.png" alt="Logo" class="m-4 bg-white rounded-circle" height="80"></a>
                <a class="navbar-brand nav-titolo active text-white" href="#"> La Casa dei libri </a>
                @if (User.IsInRole("Admin"))
                {
                    <span class="text-center">
                        <a class="btn-primary" href="@Url.Action("Index","Amministrazione")">Amministrazione</a>
                        <a class="btn-primary" href="@Url.Action("ListaUtenti","Amministrazione")">Gestione Utenti</a>
                    </span>
                }
                <button class="navbar-toggler  btn-close-white " type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon "></span>
                </button>
                <div class="collapse navbar-collapse " id="navbarScroll">
                    <ul class="navbar-nav  me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 75vh; ">
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="" asp-controller="Cliente" asp-action="Index">Libri</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Libri
                            </a>
                            <ul class="dropdown-menu ">
                                <li><a class="dropdown-item text-white" asp-area="" asp-controller="Cliente" asp-action="Index">Another action</a></li>
                                <li><hr class="dropdown-divider text-white"></li>
                                <li><a class="dropdown-item text-white" href="#">Something else here</a></li>
                            </ul>
                        </li>
                        <li class="nav-item text-white">
                            <a class="nav-link disabled text-white">Link</a>
                        </li>
                    </ul>
                    <div class="d-flex text-white" role="login">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>






        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-secondary bg-opacity-75 text-white text-center">

        LaCasaDeiLibri - Via Generation 07 - Colombo Demarku Pedrazzini Viotti Volpin - &copy; 2023
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.min.js"></script>

 
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
