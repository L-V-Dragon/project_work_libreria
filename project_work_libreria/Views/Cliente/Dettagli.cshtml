@{
    Layout = "_LayoutDettagli";
}

@model Libro




<body>

    <main>
        <article class="product">
        <picture class="product__img">
            <source srcset="" media="(min-width:600px)" />
                <img src="@Model.Foto" alt="foto" />
        </picture>

        <div class="product__content">


                <p class="product__genere">@Model.Genere.Nome</p>

                <h1 class="product__title">@Model.Titolo</h1>

           <p> @Model.Trama</p>
                <div class="flex-group">
                <p class="product__price">@Model.Prezzo €</p>
                </div>
                <button class="button" data-icon="shopping-cart">Add to Cart</button>
                <p>@Model.Like</p>
            </div>

        </article>
    </main>
</body>