 <form asp-controller="Cliente" asp-action="RecensioneLibro" method="">
<div class="container mt-5">
<div class="mb-3">
    <label for="recensioneUserName" class="form-label">UserName</label>
    <input type="email" class="form-control" id="recensioneUserName" placeholder="name@example.com">
</div>
<div class="valutazione mb-3">
