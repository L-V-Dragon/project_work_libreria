@model List<Libro>




@if (Model.Count == 0)
{
    <h3>Nessun Libro in vendita</h3>

}
else
{

    <div class="container row mt-3 mb-3">
        <div class="col-sm-12 col-xs-12 col-md-6 col-lg-6 col-xl-6 col-xl-6  descrizione">
            <h1 class="text-black mb-3" style="text-align: justify"> Inizia il tuo viaggio  <br> con i nostri Libri  </h1>
            <h4 class="text-black mt-5 mb-2" style="text-align: justify"> I libri piu apprezzati ! </h4>

        </div>


        @{
            var libriQuantità = Model.OrderByDescending(x => x.Like).ToList();
        }

        <div class="col-sm-12 col-xs-12 col-md-6 col-lg-6 col-xl-6 col-xl-6 ">
            <div id="carouselExampleInterval"
             class="carousel slide"
             data-bs-ride="carousel">
                <div class="carousel-inner">
                    @{int i = 0;}
                    @foreach (Libro libro in libriQuantità)
                    {
                        if (i == 0 )
                        
                        {
                            <div class="carousel-item active" data-bs-interval="10000">
                                <div class="containerBook">
                                    <div class="book" style=" background-image:url(@libro.Foto) ">
                                        <div class="front">

                                            <div class="coverBook " style=" background-image:url(@libro.Foto) ">
                                            </div>
                                        </div>
                                        <div class="left-side">
                                            <h2>
                                                <a href=" @Url.Action("Dettagli", "Cliente", new { id = libro.Id })" class="text-dark stretched-link">@libro.Autore</a>

                                            </h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item" data-bs-interval="10000">
                                <div class="containerBook">
                                    <div class="book" style=" background-image:url(@libro.Foto) ">
                                        <div class="front">

                                            <div class="coverBook " style=" background-image:url(@libro.Foto) ">
                                            </div>
                                        </div>
                                        <div class="left-side">
                                            <h2>
                                                <a href=" @Url.Action("Dettagli", "Cliente", new { id = libro.Id })" class="text-dark stretched-link">@libro.Autore</a>

                                            </h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }


                        i++;

                        if (i>3)
                        {
                            break;
                        }


                }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>

            </div>
        </div>
    </div>


    <div class="border-bottom m-3 col-sm-12 col-xs-12 col-md-12 col-lg-12 col-xl-12 col-xl-6 " >
        <h4>Libri </h4>
    </div>




    <div class="container ">
       
        <div class=" text-white ">


            <input type="text" class="form-control  w-25  " id="SearchBar" style="float:right; margin-right: 50px;" placeholder="Search" />

            <div id="js_no_found" class="row text-center d-none">
                <div class="col-12">
                    <h3>C'è stato un errore nel caricare la pagina</h3>
                </div>
            </div>

            <div class="d-none border-success col-md-sm-4" style="display: inline-flex;" id="Contenuto_utente">
            </div>

        </div>
        <div id="spinner-loader" class="d-flex justify-content-center">
            <div class="spinner-border mt-5" role="status" />
        </div>
    </div>

    @section Scripts{
    <script type="text/javascript">

        loadProdotti();
        document.getElementById("SearchBar").addEventListener("keyup", searchProdotto);


    </script>
    }

}





